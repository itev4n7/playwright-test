{
  "name": "playwright-test",
  "version": "1.0.0",
  "description": "Test framework using Playwright with Page Object pattern",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test --config=playwright.config.js",
    "inspector": "PWDEBUG=1 npm run test",
    "test:spec": "npx playwright test --config=playwright.config.js $SPEC",
    "test:tag-fast": "npx playwright test --config=playwright.config.js --grep @fast",
    "test:tag-slow": "npx playwright test --config=playwright.config.js --grep @slow"
  },
  "keywords": [],
  "author": "Oleksii Kvasov",
  "license": "ISC",
  "dependencies": {
    "playwright": "^1.21.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.21.1",
    "allure-playwright": "^2.0.0-beta.15"
  }
}
